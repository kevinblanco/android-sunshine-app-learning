<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/pref_location_string"
        android:title="@string/pref_title_display_name"
        android:defaultValue="@string/pref_default_display_name"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />


    <ListPreference
        android:key="@string/pref_metric"
        android:title="@string/pref_title_metrics"
        android:defaultValue="@string/pref_default_temp"
        android:entries="@array/pref_temp_metrics_titles"
        android:entryValues="@array/pref_temp_metrics_values"/>



</PreferenceScreen>
